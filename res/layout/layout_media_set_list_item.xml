<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="@dimen/media_set_list_item_height"
	android:orientation="vertical"
	android:background="@color/media_set_list_item_background">

	<RelativeLayout 
	    android:id="@+id/description_container"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/media_set_list_item_description_container_height">
	    
	    <TextView 
	        android:id="@+id/media_set_title"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_marginLeft="@dimen/media_set_list_item_title_margin_left"
	    	android:layout_centerVertical="true"
	    	style="@style/MediaSetListItemTitleText"/>
	    
	    <TextView 
	        android:id="@+id/media_set_size"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_toRightOf="@+id/media_set_title"
	    	android:layout_marginLeft="@dimen/media_set_list_item_title_margin_left"
	    	android:layout_centerVertical="true"
	    	style="@style/MediaSetListItemSizeText"/>
	    
	</RelativeLayout>
	
	<ImageView 
	    android:id="@+id/media_set_cover_image"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/media_set_list_item_cover_image_height"
	    android:scaleType="centerCrop"/>

</LinearLayout>
