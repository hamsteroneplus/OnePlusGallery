<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/media_set_list_item_background">

	<ListView 
	    android:id="@+id/media_set_listview"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:divider="@color/media_set_list_item_background"
	    android:dividerHeight="@dimen/media_set_list_item_divider_height">    
	</ListView>
	
	<Button 
	    android:id="@+id/add_album_buttom"
	    android:layout_width="@dimen/media_set_list_add_album_button_size"
	    android:layout_height="@dimen/media_set_list_add_album_button_size"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentBottom="true"
	    android:layout_marginRight="@dimen/media_set_list_add_album_button_margin_right"
	    android:layout_marginBottom="@dimen/media_set_list_add_album_button_margin_bottom"/>

</RelativeLayout>
