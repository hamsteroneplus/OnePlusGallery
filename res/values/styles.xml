<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- Application -->
	<style name="AppBaseTheme" parent="android:Theme.Material">
		<item name="android:alertDialogTheme">@android:style/Theme.Material.Light.Dialog.Alert</item>
		<item name="android:dialogTheme">@android:style/Theme.Material.Light.Dialog</item>
		<item name="android:windowActionBar">false</item>
	</style>

	<!-- Application theme. -->
	<style name="AppTheme" parent="AppBaseTheme">
		<item name="android:windowActionBar">false</item>
		<item name="android:windowNoTitle">true</item>
	</style>
    
	<!-- Base text -->
	<style name="BaseText">
		<item name="android:fontFamily">sans-serif</item>
	</style>
	
	<!-- Entry page -->
	<style name="EntryPageTabText" parent="BaseText">
		<item name="android:textColor">@color/entry_page_tab_text</item>
		<item name="android:textSize">@dimen/entry_page_tab_text</item>
	</style>
	<style name="EntryPageTabText.Selected" parent="EntryPageTabText">
		<item name="android:textColor">@color/entry_page_tab_text_selected</item>
	</style>
	
	<!-- Gallery window -->
	<style name="GalleryWindow" parent="@android:style/Theme.Material.NoActionBar">
		<item name="android:actionBarSize">@dimen/action_bar_height</item>
		<item name="android:alertDialogTheme">@android:style/Theme.Material.Light.Dialog.Alert</item>
		<item name="android:colorControlNormal">@color/gallery_seek_bar_background</item>
		<item name="android:colorControlActivated">@color/gallery_seek_bar_primary</item>
		<item name="android:dialogTheme">@android:style/Theme.Material.Light.Dialog</item>
	</style>
	
	<!--media set list item title -->
	<style name="MediaSetListItemTitleText" parent="BaseText">
		<item name="android:textColor">@color/media_set_list_item_title</item>
		<item name="android:textSize">@dimen/media_set_list_item_title_text_size</item>
	</style>
	
	<!--media set list item title -->
	<style name="MediaSetListItemSizeText" parent="BaseText">
		<item name="android:textColor">@color/media_set_list_item_size</item>
		<item name="android:textSize">@dimen/media_set_list_item_title_text_size</item>
	</style>
	
	<!-- Widget -->
	<style name="Widget" parent="@android:style/Widget.Material"/>
	<style name="Widget.ProgressBar" parent="@android:style/Widget.Material.ProgressBar"/>
	<style name="Widget.ProgressBar.Horizontal" parent="@android:style/Widget.Material.ProgressBar.Horizontal"/>	
	
	<!-- Video player -->
	<style name="VideoPlayerDurationText" parent="BaseText">
		<item name="android:textColor">@color/video_player_text_color</item>
		<item name="android:textSize">@dimen/video_player_media_control_text_size</item>
	</style>

</resources>
